<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/list_item_magnitude_tv"
        style="@style/list_item_common_attributes"
        android:text="MAG"/>

    <TextView
        android:id="@+id/list_item_place_tv"
        style="@style/list_item_common_attributes"
        android:text="example city"/>

    <TextView
        android:id="@+id/list_item_date_tv"
        style="@style/list_item_common_attributes"
        android:text="some date"/>

    <TextView
        android:id="@+id/list_item_time_tv"
        style="@style/list_item_common_attributes"
        android:text="some time"/>



</LinearLayout>
