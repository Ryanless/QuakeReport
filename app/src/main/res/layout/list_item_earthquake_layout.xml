<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/list_item_magnitude_tv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:background="@drawable/magnitude_circle"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:text="MAG" />

    <LinearLayout
        style="@style/list_item_common_attributes"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_place_modifier_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Around" />

        <TextView
            android:id="@+id/list_item_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example city" />


    </LinearLayout>

    <LinearLayout
        style="@style/list_item_common_attributes"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some date" />

        <TextView
            android:id="@+id/list_item_time_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="some time" />

    </LinearLayout>

</LinearLayout>
